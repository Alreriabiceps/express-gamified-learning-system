const express = require("express");
const router = express.Router();
const {
  createWeekSchedule,
  getWeekScheduleByDate,
} = require("../controllers/weekController");

// Route to create a week schedule
router.post("/", createWeekSchedule);

// Route to get a schedule by date
router.get("/:date", getWeekScheduleByDate);

module.exports = router;
